package stylecode.kosta180.persistence;

import java.util.List;

import stylecode.kosta180.domain.ShoppingmallVO;

public interface ShoppingmallDAO {
	private static ShoppingMallDao dao = new ShoppingMallDao();

	public List<ShoppingmallVO> listShoppingMall(ShoppingMallSearch search, int startRow);

	public List<Integer> SPMfiter(SpmFilter filter);
	
	public List<ShoppingmallVO> listShoppingMallFilter (SpmFilterList filterList);
	
	//쇼핑몰 객체 가져오기
	public ShoppingMall selectedSPM(int spmEnrollNo);	
	//쇼핑몰에 대한 상품
	public List<Product> selectedProduct(int SpmEnrollNo);	
	//쇼핑몰에 대한 스타일	
	public List<String> SpmStyle(int SpmEnrollNo);	
	//쇼핑몰 즐겨찾기에 추가하기
	public int addSpmBm(BookMark bookMark);
	//즐겨찾기기본키 번호
	public int selectspmBmNo();	
	//즐찾여부 확인
	public List<Integer> checkBM(Map<String, Object> map);
	//즐겨찾기 삭제
	public int deleteBm(Map<String, Object> map);
	// 조회수
	public void hitCount(int SpmEnrollNo);
}
