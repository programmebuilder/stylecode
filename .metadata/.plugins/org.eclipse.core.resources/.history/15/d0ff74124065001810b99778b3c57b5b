<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="stylecode.kosta180.mappers.productMapper">


	<select id="productlist" resultType="ProductVO">
		select *from product
		<if test="searchKey!=null">
			<where>
				pNm LIKE '%'||#{searchKey}||'%'
			</where>
		</if>
	</select>

	<select id="productListCount" resultType="int" parameterType="ProductSearchVO">
		select count(*)
		from product
		<if test="searchKey!=null">
			<where>
				pNm LIKE '%'||#{searchKey}||'%'
			</where>
		</if>
	</select>
	<select id="productlistLow" resultType="ProductVO">
		select*from product
		order by mprice asc
		<if test="searchKey!=null">
			<where>
				pNm LIKE '%'||#{searchKey}||'%'
			</where>
		</if>
	</select>

	<select id="productlistHigh" resultType="ProductVO">
		select*from product
		order by mprice desc
		<if test="searchKey!=null">
			<where>
				pNm LIKE '%'||#{searchKey}||'%'
			</where>
		</if>
	</select>




	<!--컨트롤러에서 받은 상품Id를 비교하는 쿼리 -->
	<select id="recommendList" parameterType="java.util.ArrayList"
		resultType="ProductVO">
		select *from product where penrollno IN
		<foreach collection="list" item="list" separator="," open="("
			close=")">
			#{list}
		</foreach>
	</select>

	<!-- 랜덤으로 상품을 뽑기위한 쿼리 -->
	<select id="recommendListRandom" resultType="ProductVO">
	
		select * from (select * from product order by DBMS_RANDOM.VALUE)
		where ROWNUM<20
	
	</select>


</mapper>