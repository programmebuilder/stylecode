<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="stylecode.kosta180.mapper.RcMapper">

<select id="selectProductData" parameterType="CategoryVO" resultType="ProductVO">
	SELECT * FROM PRODUCT
	<choose>
		<when test="criteria.size ==0">
			WHERE 1 = 1
		</when>
		<otherwise>
			WHERE CGNO = #{cgNo}
		</otherwise>
	</choose>
</select>

<select id="productList" parameterType="int" resultType="ProductVO">
	SELECT * FROM PRODUCT WHERE CGNO = #{cgNo}
</select>

<select id="countingPaging" resultType="int">
	<![CDATA[
	SELECT COUNT(*) FROM PRODUCT
		<choose>
		<when test="criteria.size ==0">
			WHERE 1 = 1
		</when>
		<otherwise>
			WHERE CGNO = #{cgNo}
		</otherwise>
	</choose>
	]]>
</select>


</mapper>