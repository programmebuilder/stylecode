<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="stylecode.kosta180.mapper.RcMapper">


<select id="selectProductData" resultType="ProductVO">
	SELECT * FROM PRODUCT
</select>

<select id="productList" parameterType="int" resultType="ProductVO">
	SELECT * FROM PRODUCT WHERE CGNO = #{cgNo}
</select>

    <!-- 2. ROWNUM Query -->
    <select id="selectPaging" parameterType="PageMaker" resultType="ProductVO">
        SELECT *
        FROM (SELECT ROWNUM RNUM, P.*
                FROM (SELECT *
                        FROM PRODUCT
                        ORDER BY SPMDATE DESC ) P )
        WHERE RNUM BETWEEN #{start} AND #{last}
    </select>
    
    <!-- 2. Total Query -->
    <select id="selectTotalPaging" resultType="ProductVO">
        SELECT COUNT(*)
        FROM PRODUCT
    </select>

</mapper>