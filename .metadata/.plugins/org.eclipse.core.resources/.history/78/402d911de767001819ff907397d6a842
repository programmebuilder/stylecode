	<!-- 인터셉트 부분 첫시작을 항상 인터셉트함 /**로 모든 URL에 접속하기 위해선 ROLE_USER의 권한이있어야함 -->
	<!-- <http auto-config="true" use-expressions="true"> <intercept-url pattern="/signin/**" 
		access="permitAll"/> <intercept-url pattern="/resources/**" access="permitAll" 
		/> <intercept-url pattern="/**" access="hasRole('ROLE_USER')"/> -->
	<!-- "/productlist" -->
	<http auto-config="true" use-expressions="true">
		<form-login login-page="/loginform" default-target-url="/sns/list"
			authentication-failure-url="/loginfail" />
		<logout logout-success-url="/logoutform" />
		<intercept-url pattern="/resources/*" access="permitAll" />

	</http>
	<!--Role_MANAGER , Role_ADMIN, Role_USER -->
	<authentication-manager>
		<authentication-provider>
			<jdbc-user-service data-source-ref="dataSource"
				users-by-username-query="SELECT 
      MID as userName, MPASSWD as password, ENABLED FROM member where mid=?"
				authorities-by-username-query="SELECT 
      MID as userName, authority  FROM member WHERE mid=?" />
		</authentication-provider>
	</authentication-manager>


	<!-- Permission MethodInvocation Expression : 소스 레벨에서 제어되는 옵션 -->

	<beans:bean id="passwordEncoder"
		class="org.springframework.security.authentication.encoding.ShaPasswordEncoder"></beans:bean>

</beans:beans>