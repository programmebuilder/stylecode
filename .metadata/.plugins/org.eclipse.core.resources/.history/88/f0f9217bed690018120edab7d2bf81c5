package recommend.item.service;

import java.util.List;

import javax.inject.Inject;

import org.springframework.stereotype.Service;

import recommend.item.domain.ProductRateVO;
import recommend.item.persistence.RateDAO;
import recommend.item.persistence.RateDAOImpl;

@Service
public class RateServiceImpl implements RateService {
	@Inject
	RateDAOImpl dao;

	@Override
	public List<ProductRateVO> getRateService(int mCode) {
		// TODO Auto-generated method stub
		 
		return dao.getRate(mCode);	
	}
	
	public List<ProductRateVO> getAllRateService(){
		return dao.getAllRate();
	}

	@Override
	public int insertRateService(ProductRateVO rate) {
		dao.insertRate(rate);
;		return 0;
	}
	
	

}
