package stylecode.sns.service;

import java.util.List;

import javax.inject.Inject;

import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import stylecode.sns.domain.SocialMediaVO;
import stylecode.sns.persistence.SocialMediaDAO;

@Service
public class SocialMediaServiceImpl implements SocialMediaService {

	@Inject
	private SocialMediaDAO dao;
	
	@Transactional
	@Override
	public void regist(SocialMediaVO vo) throws Exception {
		// 포스트 작성
		dao.create(vo);
		
		String[] files = vo.getFiles();
		
		if (files == null) {
			return;
		}
		
		for (String imgid : files) {
			// 파일 업로드
			dao.addAttach(imgid);
		}
	}

	@Override
	public List<SocialMediaVO> list() throws Exception {
		List<SocialMediaVO> socialList = dao.list();
		for(int i=0;socialList.size();i++){
			
		}
		
		return socialList;
	}

	@Override
	public void remove(Integer bdno) throws Exception {
		dao.delete(bdno);
	}

	@Override
	public void modify(SocialMediaVO vo) throws Exception {
		dao.update(vo);
	}

	@Override
	public SocialMediaVO read(Integer bdno) throws Exception {
		return dao.read(bdno);
	}

}
