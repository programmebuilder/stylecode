var page = 1;

$(function() {
	// 페이지가 로드되면 데이터를 가져오고 page를 증가시킨다.
	getList(page);
	page++;
});

$(windows).scroll(function() {
	// 스크롤이 최하단으로 내려가면 리스트를 조회하고 page를 증가시킨다.
	if ($(windows).scrollTop() >= $(document).height() - $(windows).height()) {
		getList(page);
		page++;
	}
});

function getList(page) {
	
	alert("페이징");
	
	$.ajax({
		type: "POST",
		dataType: "json",
		data: {
			"page" : page
		},
		url: "listPagination",
		success: function(returnData) {
			var data = returnData.rows;
			var html = "";
			
			// 페이지가 1일 경우에만 id가 post-list인 html을 비운다.
			if (page == 1) {
				$("#post-list").html("");
			}
			
			if (returnData.startNum <= returnData.totCnt) {
				if (data.length > 0) {
					// for문을 돌면서 행을 그린다.
				} else {
					// 데이터가 없을 경우
				}
			}
			
			html = html.replace(/%20/gi, "");
			
			if (page == 1) {
				// 페이지가 1이 아닐 경우 데이터를 붙인다.
				$("#post-list").html(html);
			}
		}, error: function(e) {
			if (e.status == 300) {
				alert("데이터를 가져오는데 실패했습니다.")
			};
		}
	});
}