package stylecode.kosta180.controller;




import java.util.Iterator;

import javax.inject.Inject;

import org.jsoup.Jsoup;
import org.jsoup.nodes.Document;
import org.jsoup.nodes.Element;
import org.jsoup.select.Elements;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;

import stylecode.kosta180.domain.ProductVO;
import stylecode.kosta180.service.SpmDetailService;

@Controller
public class SpmDetailController {

	private static final Logger logger = LoggerFactory.getLogger(SpmDetailController.class);
	
	@Inject
	private SpmDetailService spmService;
	
	@RequestMapping(value="/spmDetail/{spmEnrollNo}")
	public String spmDetail(@PathVariable int spmEnrollNo,Model model)throws Exception{

		model.addAttribute("spm", spmService.selectedSPM(spmEnrollNo));
		model.addAttribute("spmStyle", spmService.SpmStyle(spmEnrollNo));
		model.addAttribute("product", spmService.selectedProduct(spmEnrollNo));

		//쇼핑몰마다의 상품을 크롤링 해서 가져오는 부분
		
		
        //상품명
        //상품사진URL
        //상품가격
        // 원하는 부분은 Elements형태로 되어 있으므로 이를 String 형태로 바꾸어 준다.
		
		//spmEnrollNo에 해당하는 URL을 변수에 설정해준다.
		String spmURL = spmService.selectedSPM(spmEnrollNo).getSpmURL();
		
		switch (spmEnrollNo) {
		case 4: //난닝구 사이트
			try {
				System.out.println("4번 난닝구 사이트 입니다.");
				Document doc = Jsoup.connect("https://www.naning9.com/").get();
				
				Elements products = doc.select(".list_cell");
				
/*				String url = contents.attr(".list_cell href");
				String text = contents.text();
				System.out.println("링크 : "+url +"나머지 : "+ text);*/
				
				
/*				for(Element row : contents){
					Iterator<Element> iterElem = row.getElementsByTag("a").iterator();
					StringBuilder builder = new StringBuilder();
					for(String item : items)
				}*/
				//doc.select(".bucket .content:eq(1) li").
				
				
/*				for(Element row2 : product){
					Iterator<Element> it = row2.getElementsByTag("li").iterator();
					System.out.println("----------------------");
					while(it.hasNext()){
						String title = it.next().text();						
						System.out.println(title);
					}
				}*/
				
				for(Element product : products){
					Iterator<Element> productURL = product.getElementsByTag("a").iterator();
					Iterator<Element> productName = product.getElementsByTag("li").iterator();
					System.out.println("----------------------");
					
					while(productURL.hasNext()){
						String link = spmURL + productURL.next().attr("href");
						
						System.out.println(link);
					}
					while(productName.hasNext()){
						String title = productName .next().text();						
						System.out.println(title);
					}
				}
			} catch (Exception e) {
				e.printStackTrace();
			}
			break;

		default:
			break;
		}
		return "/spmDetail/spmDetail";	
	} 
	
	
	
	
	
}
