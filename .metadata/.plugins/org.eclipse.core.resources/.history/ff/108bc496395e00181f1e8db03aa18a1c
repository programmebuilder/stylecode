package stylecode.kosta180.controller;




import javax.inject.Inject;

import org.jsoup.Jsoup;
import org.jsoup.nodes.Document;
import org.jsoup.select.Elements;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;

import stylecode.kosta180.service.SpmDetailService;

@Controller
public class SpmDetailController {

	private static final Logger logger = LoggerFactory.getLogger(SpmDetailController.class);
	
	@Inject
	private SpmDetailService spmService;
	
	@RequestMapping(value="/spmDetail/{spmEnrollNo}")
	public String spmDetail(@PathVariable int spmEnrollNo,Model model)throws Exception{

		model.addAttribute("spm", spmService.selectedSPM(spmEnrollNo));
		model.addAttribute("spmStyle", spmService.SpmStyle(spmEnrollNo));
		/*	model.addAttribute("product", spmService.selectedProduct(spmEnrollNo));*/


		
		
		//쇼핑몰마다의 상품을 크롤링 해서 가져오는 부분
		
		
        //상품명
        //상품사진URL
        //상품가격
        //쇼핑몰명
        //쇼핑몰URL
        // 원하는 부분은 Elements형태로 되어 있으므로 이를 String 형태로 바꾸어 준다.
		
		//spmEnrollNo에 해당하는 URL을 변수에 설정해준다.
		String spmURL = spmService.selectedSPM(spmEnrollNo).getSpmURL();
		
		switch (spmEnrollNo) {
		case 4: //난닝구 사이트
			try {
				System.out.println("4번 난닝구 사이트 입니다.");
				Document doc = Jsoup.connect(spmURL).get();
				Elements contents = doc.select("div.item_list list3322 cle > div.list_cell");
				String text = contents.text();
				System.out.println(text);
			} catch (Exception e) {
				e.printStackTrace();
			}
			break;

		default:
			break;
		}
		return "/spmDetail/spmDetail";	
	} 
	
}
